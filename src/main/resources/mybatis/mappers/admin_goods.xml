<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="mapper.admin.goods">
<!-- 리절트 맵 정의 -->	
	<resultMap id="goodsResult" type="goodsVO">
		<result property="goods_id" column="goods_id" />
		<result property="goods_name" column="goods_name" />
		<result property="goods_brand" column="goods_brand" />
		<result property="goods_price" column="goods_price" />
		<result property="goods_sell_price" column="goods_sell_price" />
		<result property="stock" column="goods_stock" />
		<result property="delivery_charge" column="delivery_charge" />
		<result property="goods_description" column="goods_description" />
		<result property="goods_status" column="goods_status" />
		<result property="goods_keyword" column="goods_keyword" />

	</resultMap>
	
	<resultMap id="imageResult" type="ImageFileVO">
	   <result property="goods_id" column="goods_id" />
	   <result property="goods_image_fileName" column="goods_image_fileName" />
	   <result property="goods_image_writerid" column="goods_image_writerid" />
	   <result property="goods_image_id" column="goods_image_id" />
	   <result property="goods_image_type" column="goods_image_type" />
	</resultMap>
	
	<insert id="insertNewGoods" parameterType="java.util.Map"   >
		<selectKey resultType="String" keyProperty="goods_id" order="BEFORE">
	    	select seq_goods_id.nextval from dual
	    </selectKey>
	    
	    <![CDATA[
		   insert into t_shopping_goods(
		                goods_id, 
		                goods_brand,
		                goods_keyword,
                    goods_name,
										goods_price,
										goods_sell_price,
										delivery_charge,
										goods_status,
										goods_description,
										
										goods_stock
										
			              )
					  			values(
					  			      #{goods_id},
					  			      #{goods_brand},
					  			      #{goods_keyword},
					  			      #{goods_name},
					  			      
					  			      #{goods_price},
					  			      #{goods_sell_price},
					  			      
					  			      #{delivery_charge},
					  			      #{goods_status },
											
									      #{goods_description},
									      #{goods_stock}
					 			 )
		]]>
	</insert> 
	
	
	<select id="selectNewGoodsList" resultMap="goodsResult"   parameterType="java.util.Map"  >
	    <![CDATA[
		  select * from (
			   select rowNum as recNum,
			   		   goods_id, 
		                goods_brand,
		                goods_keyword,
                    goods_name,
										goods_price,
										goods_sell_price,
										delivery_charge,
										goods_status,
										goods_description,
										
										goods_stock
			       from (
			             select   goods_id, 
		                goods_brand,
		                goods_keyword,
                    goods_name,
										goods_price,
										goods_sell_price,
										delivery_charge,
										goods_status,
										goods_description,
										
										goods_stock
			              from cat_goods_tbl
					    )
				)							
			where				
		recNum between (#{section}-1)*100+ (#{pageNum}-1)*10+1 and (#{section}-1)*100+(#{pageNum})*10				        
    	]]>
	</select>
	
	</mapper>